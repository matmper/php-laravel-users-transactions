            "AuthStoreRequest": {
                "required": [
                    "name",
                    "email",
                    "documentNumber",
                    "password",
                    "type"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "User Name Example"
                    },
                    "email": {
                        "type": "email",
                        "example": "email@example.com"
                    },
                    "documentNumber": {
                        "type": "string",
                        "example": "11122233344"
                    },
                    "password": {
                        "type": "string",
                        "example": "mypass"
                    },
                    "type": {
                        "type": "string",
                        "example": "pf"
                    }
                },
                "type": "object"
            },
            "TransactionStoreRequest": {
                "required": [
                    "payeeId",
                    "amount"
                ],
                "properties": {
                    "payeeId": {
                        "type": "string",
                        "format": "text",
                        "example": "31bf19b0-1a2c-11ee-be56-0242ac120002"
